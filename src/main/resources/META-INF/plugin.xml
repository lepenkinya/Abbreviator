<idea-plugin>
    <id>com.intellij.abbreviator</id>
    <name>Abbreviator</name>
    <version>0.0.001</version>
    <vendor>yaroslav.lepenkin@jetbrains.com</vendor>

    <description>Experimental Abbreviation Support</description>

    <change-notes>Change Notes</change-notes>

    <idea-version since-build="171.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="com.intellij.abbreviation.AbbreviationService"
                            serviceImplementation="com.intellij.abbreviation.AbbreviationServiceImpl">
        </applicationService>
    </extensions>

    <actions>
        <action class="com.intellij.abbreviation.ExpandAbbreviation" id="ExpandAbbreviation"/>
    </actions>



    <project-components>
    </project-components>

    <application-components>


    </application-components>

</idea-plugin>
